{
  "name": "vemcomer/vemcomer-core",
  "description": "Core do marketplace VemComer (WordPress plugin).",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=8.1"
  },
  "suggest": {
    "mercadopago/dx-php": "Necessário para validar notificações oficiais do Mercado Pago."
  },
  "autoload": {
    "psr-4": {
      "VemComer\\Core\\": "inc/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "0.1.x-dev"
    }
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1",
    "squizlabs/php_codesniffer": "^3",
    "wp-coding-standards/wpcs": "^3",
    "phpcompatibility/php-compatibility": "^10@dev"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
